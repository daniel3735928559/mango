#!/bin/bash
#export MC_ADDR='tcp://localhost:'"$1"
export PYTHONPATH="$(realpath $( dirname "${BASH_SOURCE[0]}" )'/../../libmango/py' )"
echo $PYTHONPATH
echo "MID" $MANGO_ID
#export MANGO_ID=$2
python mx_agent.py &
export MX_PID=$!
echo $MX_PID
while [[ ! -f .run/"$MX_PID"_init.tmp && ! -p .run/"$MX_PID"_out.tmp ]]; do
  [[ -f .run/"$MX_PID"_out.tmp ]] && echo hello;
  [[ ! -f .run/"$MX_PID"_out.tmp ]] && echo hello2;
  printf '.';
  sleep 1;
  done
bash --init-file .run/"$MX_PID"_init.tmp
#XDG_RUNTIME_DIR=/run/user/1000 XAUTHORITY=/home/zoom/.Xauthority DISPLAY=:0 terminator -e "bash --init-file .run/$MX_PID"
#screen -c screenrc

